@model BlogCore.Models.ViewModels.HomeVM


<div id="carouselExampleIndicators" class="carousel slide">

    <div class="carousel-inner">
        @{
            int contador = 0;
        }

        @foreach (var slider in Model.slider)
        {
            var itemDinamico = contador++ == 0 ? "active" : "";

            if (slider.Estado == true)
            {
                <div class="carousel-item @itemDinamico">
                    <img class="d-block w-100" src="@Url.Content(slider.UrlImagen)">
                    <h1 class="text-white text-center bg-dark pt-1">@Html.Raw(slider.Nombre)</h1>
                </div>
            }
        }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
