@model BlogCore.Models.Articulo

@{
    ViewData["Title"] = "Detalle Artículo";

    //Cambiar formato fecha
    DateTime fechaCreacion = DateTime.Parse(Model.FechaCreacion);
    string fechaCambiada = fechaCreacion.ToString("dd/MM/yyyy");
}
<br />
<div class="container">
    <div class="card">
        <div class="card-header bg-light text-light">
            <div class="col-12 text-center">
                <h2 class="text-primary mt-2">@Model.Nombre</h2>
            </div>
            <div class="col-12">
                <p class="text-muted">Fecha: @fechaCambiada</p>
            </div>
        </div>
        <div class="card-body">
            <div class="col-12">
                <img src="@Model.UrlImagen" class="img-thumbnail mx-auto d-block" />
                <p class="text-secondary">@Html.Raw(Model.Descripcion)</p>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-12 col-md-6 pb-1">
                    <a asp-action="Index" class="btn btn-success btn-sm">Volver atrás</a>
                </div>
            </div>
        </div>
    </div>
</div>

